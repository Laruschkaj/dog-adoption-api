{
	"name": "dog-adoption-api",
	"version": "1.0.0",
	"description": "A RESTful API for a dog adoption platform, built with Node.js, Express, and MongoDB. Includes features for user authentication, dog management, and testing.",
	"main": "app.js",
	"scripts": {
		"start": "node app.js",
		"dev": "nodemon app.js",
		"test": "cross-env NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --exit --require dotenv/config",
		"test:watch": "cross-env NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --watch --require dotenv/config",
		"seed": "cross-env NODE_ENV=development node scripts/seed.js"
	},
	"keywords": [
		"node.js",
		"express.js",
		"mongodb",
		"rest-api",
		"backend",
		"api-testing",
		"mocha",
		"chai"
	],
	"author": "Laruchka",
	"license": "MIT",
	"dependencies": {
		"express": "^4.18.2",
		"mongoose": "^7.6.3",
		"bcryptjs": "^2.4.3",
		"jsonwebtoken": "^9.0.2",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"helmet": "^7.1.0",
		"express-rate-limit": "^7.1.5",
		"swagger-ui-express": "^5.0.0",
		"swagger-jsdoc": "^6.2.8",
		"ejs": "^3.1.9",
		"cookie-parser": "^1.4.6"
	},
	"devDependencies": {
		"mocha": "^10.2.0",
		"chai": "^4.3.10",
		"chai-http": "^4.4.0",
		"cross-env": "^7.0.3",
		"nodemon": "^3.0.1"
	}
}