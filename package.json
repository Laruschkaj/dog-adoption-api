{
	"name": "dog-adoption-api",
	"version": "1.0.0",
	"description": "A RESTful API for a dog adoption platform, built with Node.js, Express, and MongoDB. Includes features for user authentication, dog management, and testing.",
	"main": "app.js",
	"scripts": {
		"start": "node app.js",
		"dev": "nodemon app.js",
		"test": "cross-env NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --exit",
		"test:watch": "cross-env NODE_ENV=test mocha tests/**/*.test.js --timeout 10000 --watch",
		"seed": "node scripts/seed.js"
	},
	"keywords": [
		"node.js",
		"express.js",
		"mongodb",
		"rest-api",
		"backend",
		"api-testing",
		"mocha",
		"chai"
	],
	"author": "Your Name",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cors": "^2.8.5",
		"dotenv": "^16.6.1",
		"express": "^4.21.2",
		"express-rate-limit": "^7.5.1",
		"helmet": "^7.2.0",
		"jsonwebtoken": "^9.0.2",
		"lucide": "^0.542.0",
		"mongoose": "^7.8.7"
	},
	"devDependencies": {
		"chai": "^4.5.0",
		"chai-http": "^4.4.0",
		"cross-env": "^7.0.3",
		"live-server": "^1.2.0",
		"mocha": "^10.8.2",
		"nodemon": "^3.1.10"
	}
